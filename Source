Source Code:
Main Activity:
 package com.example.covid_19_tracker
import android.support.v7.widget.RecyclerView
import android.view.LayoutInflater
import android.view.View
import android.view.ViewGroup
import android.widget.TextView
class StateRVAdapter (private val stateList:List<StateModel>) :
 RecyclerView.Adapter<StateRVAdapter.StatRVViewHolder>() {
 class StatRVViewHolder(itemView: View) :RecyclerView.ViewHolder(itemView){
 val stateNameTV:TextView = itemView.findViewById(R.id.idTVState)
 val casesTV:TextView = itemView.findViewById(R.id.idTVCases)
 val deathsTV:TextView = itemView.findViewById(R.id.idTVDeaths)
 val recoveredTV:TextView = itemView.findViewById(R.id.idTVRecovered)
 }
 override fun onCreateViewHolder(p0: ViewGroup, p1: Int): StatRVViewHolder {
 val itemView = LayoutInflater.from(p0.context).inflate(R.layout.state_rv_item,p0,false)
 return StatRVViewHolder(itemView)
 }
 override fun onBindViewHolder(p0: StatRVViewHolder, p1: Int) {
 val stateData = stateList[p1]
 p0.casesTV.text = stateData.cases.toString()
 p0.stateNameTV.text = stateData.state
 p0.deathsTV.text = stateData.deaths.toString()
 p0.recoveredTV.text = stateData.recovered.toString()
 }
 override fun getItemCount(): Int {
 return stateList.size
 }
}
6.2.2 State Model:
package com.example.covid_19_tracker
data class StateModel (
 val state:String,
 val recovered:Int,
 val deaths:Int,
 val cases:Int,
)

StateRVAdapter:
package com.example.covid_19_tracker
import android.support.v7.widget.RecyclerView
import android.view.LayoutInflater
import android.view.View
import android.view.ViewGroup
import android.widget.TextView
class StateRVAdapter (private val stateList:List<StateModel>) :
 RecyclerView.Adapter<StateRVAdapter.StatRVViewHolder>() {
 class StatRVViewHolder(itemView: View) :RecyclerView.ViewHolder(itemView){
 val stateNameTV:TextView = itemView.findViewById(R.id.idTVState)
 val casesTV:TextView = itemView.findViewById(R.id.idTVCases)
 val deathsTV:TextView = itemView.findViewById(R.id.idTVDeaths)
 val recoveredTV:TextView = itemView.findViewById(R.id.idTVRecovered)
 }
 override fun onCreateViewHolder(p0: ViewGroup, p1: Int): StatRVViewHolder {
 val itemView = LayoutInflater.from(p0.context).inflate(R.layout.state_rv_item,p0,false)
 return StatRVViewHolder(itemView)
 }
 override fun onBindViewHolder(p0: StatRVViewHolder, p1: Int) {
 val stateData = stateList[p1]
 p0.casesTV.text = stateData.cases.toString()
 p0.stateNameTV.text = stateData.state
 p0.deathsTV.text = stateData.deaths.toString()
 p0.recoveredTV.text = stateData.recovered.toString()
 }
 override fun getItemCount(): Int {
 return stateList.size
 }
}

